{
	"manifest_version": 2,
    
    "name": "Workathon",
    "version": "0.0",
    "description": "A Google Chrome extension that helps you focus on what's important in life i think lol",
    
    "background": {
        "scripts": ["redirect.js"]
    },
    
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Open popup for Workathon",
        "default_icon": "icon.png"
    },
    
    "permissions": ["tabs",
                    "webRequest",
                    "webRequestBlocking",
                    "http://*/*",
                    "https://*/*"],

    "web_accessible_resources": [
        "redirect.html"]
}