{
	"manifest_version": 2,
    
    "name": "Workathon",
    "version": "0.0",
    "description": "Focus on work by blocking distracting websites.",
    
    "background": {
        "scripts": ["js/background.js"]
    },
    
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Open popup for Workathon",
        "default_icon": "icon.png"
    },
    
    "permissions": ["tabs",
                    "webRequest",
                    "webRequestBlocking",
                    "http://*/*",
                    "https://*/*",
                    "storage"],

    "web_accessible_resources": ["redirect.html"]
}